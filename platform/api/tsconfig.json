{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@health/shared": ["packages/shared"]
    }
  }
}
